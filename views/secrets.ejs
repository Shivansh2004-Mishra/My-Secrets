<%- include('partials/header') %>

<div class="jumbotron text-center">
   <a href="/profile" class="profile-icon">
      <i class="fa-solid fa-user-circle"></i>
   </a>
   <h1>Welcome</h1>
   <h3 class="text-muted"><%= user.name %></h3>
   <div class="container">
      <i class="fas fa-key fa-6x"></i>
      <h2 class="display-3">you've Discovered My Secrets!</h2>
      <p class="secret-text">This page Authenticated</p>
      <hr>
   </div>
    <p class="lead">Here are the secrets you've submitted:</p>
   <% if (user.secrets && user.secrets.length > 0) { %>
      <ul class="list-group mb-4">
         <% user.secrets.forEach(function(secret) { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
               <span><%= secret %></span>
               <form action="/delete-secret" method="POST" style="display:inline;">
                  <input type="hidden" name="secret" value="<%= secret %>">
                  <button type="submit" class="btn btn-danger btn-sm">
                     <i class="fa fa-trash"></i> Delete
                  </button>
               </form>
            </li>
         <% }) %>
      </ul>
   <% } else { %>
      <p class="mt-4">You haven't submitted a secret yet. <a href="/submit">Submit one now!</a></p>
   <% } %>
   <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Secret</a>
</div>

<%- include('partials/footer') %>